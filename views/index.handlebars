<h1 class="jumbotron text-center">Burgers!</h1>
<img class="center-block img-responsive" src="assets/img/burger.png">
<div class="col-xs-6 text-center">
  <h2 class="well">Burgers that are not devoured!</h2><br>

  <ul class="well">
    {{#each burgers}}
      {{#unless this.devoured}}
        <li class="well well-sm">
          {{this.burger_name}}<br>
          {{this.date}}

          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button class="btn btn-danger" type="submit">DEVOUR!</button>
          </form>

          
        </li>
      {{/unless}}
    {{/each}}
  </ul>
</div>
<div class="col-xs-6 text-center">
  <h2 class="well">Burgers that are devoured!</h2><br>

  <ul class="well">
    {{#each burgers}}
      {{#if this.devoured}}
        <li class = "well well-sm">
          {{this.burger_name}}<br>
          {{this.date}}
        </li>
      {{/if}}
    {{/each}}
  </ul>
</div>
<div id="bottom" class="col-xs-12 text-center well">
<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button class="btn btn-success" type="submit">Add Burger</button>
</form>
</div>
